package com.formacionbdi.springboot.app.test.car.services.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.formacionbdi.springboot.app.test.car.dto.CarDto;
import com.formacionbdi.springboot.app.test.car.repository.CarRepository;
import com.formacionbdi.springboot.app.test.car.services.CarService;

@Service
public class CarServiceImpl implements CarService {

	@Autowired
	private CarRepository repository;
	
	@Override
	public List<CarDto> getAll() {
		return (List<CarDto>) repository.findAll().stream().map(p -> new CarDto().EntityToDto(p));
	}

	@Override
	public CarDto getCarById(Long id) {
		// TODO Auto-generated method stub
		return null;
	}

}
